<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/');
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice-bad">
        <% errors.array({ onlyFirstError: true }).forEach(error => { %>
            <li><%= error.msg %></li>
    <% }); %>
    </ul>
<% } %>

<form id="deleteForm" action="/inv/delete" method="post">
    <i>Confirm Deletion - This action cannot be undone.</i>
    <label>Make: <input type="text" name="inv_make" readonly required pattern="[a-zA-Z]{3,}" value="<%= locals.inv_make %>"></label>
    <label>Model: <input type="text" name="inv_model" readonly required pattern="[a-zA-Z]{3,}" value="<%= locals.inv_model %>"></label>
    <label>Year: <input type="number" name="inv_year" readonly required min="1000" value="<%= locals.inv_year %>"></label>
    <label>Price: <input type="text" name="inv_price" readonly required pattern="[0-9.]+" value="<%= locals.inv_price %>"></label>
    <button type="submit">Delete Vehicle</button>
    <input type="hidden" name="inv_id" <% if (locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
</form>
