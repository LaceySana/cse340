<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to homepage">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin) { %>
         <a href="/account/">Welcome <%= locals.accountData.account_firstname %></a>
        <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
         <a href="/messages/inbox">Inbox</a>
        <% } %>
         <a href="/account/logout">Logout</a>
        <% } else { %>
         <a href="/account/login" title="Click to log in">My Account</a>
        <% } %>
    </div>
</header>